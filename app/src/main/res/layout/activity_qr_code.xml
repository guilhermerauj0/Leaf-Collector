<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.qrcode.QrCodeActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/qrcode_codescanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@color/off_white"
        app:autoFocusButtonVisible="true"
        app:flashButtonVisible="true"
        app:frameAspectRatioHeight="16"
        app:frameAspectRatioWidth="9"
        app:frameColor="@color/off_white"
        app:maskColor="#88388E3C" />

</androidx.constraintlayout.widget.ConstraintLayout>