<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="leafenterprise.leafcollector.br">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LeafCollector"
        tools:targetApi="31">
        <activity
            android:name=".ui.login.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.QrCodeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LeafReaderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.BuyProofActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChangeSuccessActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChangeProofActivity"
            android:exported="false" />
        <activity
            android:name=".ui.shop.view.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.view.AdressActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.view.UserInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CartActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.view.HomeActivity"
            android:exported="false" />
    </application>

</manifest>